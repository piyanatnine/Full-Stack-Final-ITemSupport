{
    "$jsonSchema": {
        "required": [
            "username",
            "itemCode",
            "startTime"
        ],
        "properties": {
            "username": {
                "bsonType": "string",
                "description": "Username of borrower, string (required)",
                "ref": "users"
            },
            "itemCode": {
                "bsonType": "string",
                "description": "Name of item borrowed, string (required)",
                "ref": "items"
            },
            "startTime": {
                "bsonType": "date",
                "description": "Start time of borrowing, date (required)"
            },
            "endTime": {
                "bsonType": "date",
                "description": "End time of borrowing, date"
            }
        }
    }
}